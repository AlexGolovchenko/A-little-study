/*Task: log chessboard of cell '#' 8x8
*/
function chess() {
  let cell = '#'
  let empty = ' '
  let temp1 = ''
  let temp2 = ''
  for (let i = 1; i < 5; i++) {
    if (i % 1) {
      temp1 += empty + cell
    } else {
      temp1 += cell + empty
    }
  }
  for (let i = 1; i < 5; i++) {
    if (i % 1) {
      temp2 += cell + empty
    } else {
      temp2 += empty + cell
    }
  }
  for (let i = 0; i < 4; i++) {
    console.log(temp1 + '\n' + temp2);
  }
}
//chess(); //->
