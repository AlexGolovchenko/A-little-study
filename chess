/*Tast: write loop for printing triangle of cell
*/
function triangle (x) {
  if (!x) {
    x = 8;
  }
  if (typeof x !== 'number') {
    console.log('Error: wrong data!');
    return;
  }
  let cell = '#';
  let temp = '';
  let i=0;
  while (i<x) {
    temp += cell;
    console.log(temp);
    i++;
  }
}
